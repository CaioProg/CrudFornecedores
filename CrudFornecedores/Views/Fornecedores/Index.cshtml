@model IEnumerable<CrudFornecedores.Models.Fornecedor>
@using CrudFornecedores.Controllers
@{
	ViewData["Title"] = "Lista";
}

<style>
	h1 {
		text-align: center;
	}
</style>

<h1>Lista de Fornecedores</h1>

<h4></h4>
<hr />

<a class="btn btn-primary" asp-area="" asp-controller="Fornecedores" asp-action="Create">Cadastro</a>


<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Nome)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Cnpj)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Especialidade)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Id)
			</th>
			<th></th>
		</tr>

	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Nome)
				</td>
				<td>
					@*Cnpj sem formatação*@
					@*@Html.DisplayFor(modelItem => item.Cnpj)*@

					@*Cnpj com formatação*@
					@Convert.ToInt64(item.Cnpj).ToString(@"00\.000\.000\/0000\-00")
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Especialidade)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Id)
				</td>
				<td>
					<a class="btn btn-secondary btn-sm" asp-action="Edit" asp-route-id="@item.Id ">Editar</a>
					<a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
					<a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
				</td>
			</tr>
		}
	</tbody>
</table>
